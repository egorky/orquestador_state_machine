{
    "validations": [
        {
            "parameter": "id_number",
            "rules": [
                {
                    "type": "regex",
                    "pattern": "^\\d{6,10}$",
                    "error_message": "ID number must be a number between 6 and 10 digits."
                }
            ]
        },
        {
            "parameter": "city",
            "rules": [
                {
                    "type": "in_list",
                    "source": "fetch_cities_api",
                    "key": "city_id",
                    "error_message": "City must be one of the available cities: New York, Los Angeles, or Chicago."
                }
            ]
        },
        {
            "parameter": "branch",
            "rules": [
                {
                    "type": "in_list",
                    "source": "fetch_branches_api",
                    "key": "branch_id",
                    "error_message": "Branch must be one of the available branches in the selected city."
                }
            ]
        },
        {
            "parameter": "date_time",
            "rules": [
                {
                    "type": "in_list",
                    "source": "fetch_available_times_api",
                    "key": "date_time",
                    "error_message": "Date and time must be one of the available options."
                },
                {
                    "type": "regex",
                    "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}$",
                    "error_message": "Date and time must be in the format YYYY-MM-DD HH:MM."
                }
            ]
        }
    ]
}