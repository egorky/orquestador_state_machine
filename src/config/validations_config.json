{
    "validations": [
        {
            "parameter": "id_number",
            "rules": [
                {
                    "type": "regex",
                    "pattern": "^\\d{6,10}$",
                    "error_message": "El número de identificación debe tener entre 6 y 10 dígitos."
                }
            ]
        },
        {
            "parameter": "city",
            "rules": [
                {
                    "type": "in_list",
                    "source": "cities",
                    "key": "city_id",
                    "error_message": "La ciudad debe ser una de las opciones disponibles."
                }
            ]
        },
        {
            "parameter": "branch",
            "rules": [
                {
                    "type": "in_list",
                    "source": "branches",
                    "key": "branch_id",
                    "error_message": "La sucursal debe ser una de las opciones disponibles en la ciudad seleccionada."
                }
            ]
        },
        {
            "parameter": "speciality",
            "rules": [
                {
                    "type": "in_list",
                    "source": "specialities",
                    "key": "speciality_id",
                    "error_message": "La especialidad debe ser una de las opciones disponibles en la sucursal seleccionada."
                }
            ]
        },
        {
            "parameter": "date_time",
            "rules": [
                {
                    "type": "in_list",
                    "source": "available_times",
                    "key": "date_time",
                    "error_message": "La fecha y hora debe ser una de las opciones disponibles."
                }
            ]
        }
    ]
}